citHeader("When using RainTyrol in publications, please cite both the RainTyrol package and the data sources:")

if(!exists("meta") || is.null(meta)) meta <- packageDescription("pwt8")
year <- sub("-.*", "", meta$Date)
note <- sprintf("R package version %s", meta$Version)

citEntry(entry = "Manual",
         title = "RainTyrol: Precipitation data for 95 observation stations in Tyrol, Austria",
         author = as.person("Lisa Schlosser, Reto Stauffer, Achim Zeileis"),
         year         = year,
         note         = note,
	 url          = "http://R-Forge.R-project.org/projects/partykit/",

	 header = "To cite RainTyrol, the R package, please use:"
)

citEntry(entry = "Article",
         title = "{NOAA}'s Second-Generation Global Medium-Range Ensemble Reforecast Dataset",
         author = personList(as.person("Thomas M. Hamill"),
                             as.person("Gary T. Bates"),
                             as.person("Jeffrey S. Whitaker"),
                             as.person("Donald R. Murray"),
	                     as.person("Michael Fiorino"), 
	                     as.person("Thomas J. Galarneau Jr."),
	                     as.person("Yuejian Zhu"), 
	                     as.person("William Lapenta")), 
         year         = "2013",
	 journal      = "Bulletin of the American Meteorological Society",
	 volume       = "94",
	 number       = "10",
	 pages        = "1553--1565",
         doi          = "10.1175/BAMS-D-12-00014.1",
         
	 header = "To cite the data (covariates), please use:"
)


citEntry(entry = "other",
         title = "{B}undesministerium f\"ur {L}and und {F}orstwirtschaft, {U}mwelt und {W}asserwirtschaft ({BMLFUW}), {A}bteilung {IV/4} -- {W}asserhaushalt",
         author = personList("{BMLFUW}"), 
         year         = "2016",
         note         = "Available at \url{http://ehyd.gv.at}",
         note         = "Accessed: 2016--02--29",
         
	 header = "To cite the data (observations), please use:"
)


citEntry(entry = "Article",
         title = "{E}arth{E}nv-{DEM90}: A Nearly-Global, Void-Free, Multi-Scale Smoothed, 90m Digital Elevation Model From Fused {ASTER} and {SRTM} Data",
         author = personList(as.person("Natalie Robinson"),
                             as.person("James Regetz"),
                             as.person("Robert P. Guralnick")), 
         year         = "2014",
	 journal      = "ISPRS Journal of Photogrammetry and Remote Sensing",
	 volume       = "87",
	 pages        = "57--67",
         doi          = "10.1016/j.isprsjprs.2013.11.002",
         issn         = "0924-2716",
	 header = "To cite the data used for the map, please use:"
)


